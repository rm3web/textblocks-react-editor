    "karma-safari-launcher": "~1.0.0",
    "karma-sauce-launcher": "~1.0.0",
    "livereactload": "^2.1.1",
    "mocha": "~2.4.5",
    "phantomjs-prebuilt": "^2.1.4",
    "react": "~0.14.7",
    "react-addons-linked-state-mixin": "~0.14.7",
